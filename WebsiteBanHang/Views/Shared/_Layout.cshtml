<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewBag.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
    
    <!-- jQuery -->
    <script src="~/Content/js/jquery-2.0.0.min.js" type="text/javascript"></script>
    <!-- Bootstrap4 files-->
    <script src="~/Content/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />
        
    <!-- Font awesome 5 -->
    <link href="~/Content/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />
    <!-- custom javascript -->
    <script src="~/Content/js/script.js" type="text/javascript"></script>


    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/jquery.hoverIntent.min.js"></script>
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <script src="~/Content/js/superfish.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <!-- Main JS File -->
    
</head>
<body>

    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="~/Home/" class="brand-wrap">
                            <img class="logo" src="~/Content/images/logo.png">
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <div class="col-xl-6 col-lg-5 col-md-6">
                        <form action="#" class="search-header">
                            <div class="input-group w-100">

                                <input type="text" class="form-control" placeholder="Tìm kiếm">

                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i> Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </form> <!-- search-wrap .end// -->
                    </div> <!-- col.// -->
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="widgets-wrap float-md-right">
                            @if (Session["idUser"] != null)
                            {
                                <div class="widget-header">
                                    <a href="~/Admin/Home/Index" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-user-circle"></i>
                                            <span class="" id=""></span>
                                        </div>
                                        <small class="text">Trang admin</small>
                                    </a>
                                </div>

                                <div class="widget-header">
                                    <a href="~/Home/Logout" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-sign-out-alt"></i>
                                            <span class="" id=""></span>
                                        </div>
                                        <small class="text">Đăng Xuất </small>
                                    </a>
                                </div>
                            }
                            else
                            {

                                <div class="widget-header">
                                    <a href="~/Home/Login" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-sign-in-alt"></i>
                                            <span class="" id=""></span>
                                        </div>
                                        <small class="text">Đăng Nhập</small>
                                    </a>
                                </div>


                                <div class="widget-header">
                                    <a href="~/Home/Register" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-user-plus"></i>
                                            <span class="" id=""></span>
                                        </div>
                                        <small class="text">Đăng ký </small>
                                    </a>
                                </div>
                            }
                            

                            <div class="widget-header">
                                <a href="@Url.Action("Index","Cart")" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-shopping-cart"></i>
                                        <span class="notify" id="CartCount">@Session["count"]</span>
                                    </div>
                                    <small class="text"> Giỏ hàng </small>
                                </a>
                            </div>

                            <div class="widget-header">
                                <a href="@Url.Action("Index","News")" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-newspaper"></i>
                                        <span class="" id=""></span>
                                    </div>
                                    <small class="text"> Tin tức </small>
                                </a>
                            </div>


                        </div> <!-- widgets-wrap.// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->




    </header> <!-- section-header.// -->

    @RenderBody()

    <!-- ========================= FOOTER ========================= -->
    <footer class="section-footer bg-secondary">
        <div class="container">
            <section class="footer-bottom text-center">
                <p class="text-white">Bảo mật - Dịch vụ - Hướng dẫn</p>
                <p class="text-muted"> Designed by DAT21Th |  All rights reserved </p>
                <br>
            </section>
        </div><!-- //container -->
    </footer>
    <!-- ========================= FOOTER END // ========================= -->
</body>
</html>